<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="agh.ics.oop.gui.controller.SimulationController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Button fx:id="resumeButton" mnemonicParsing="false" onAction="#onResumeButtonClick" text="Pause" />
            <Label text="Simulation speed" />
            <Slider fx:id="simulationSpeedSlider" value="50.0" />
            <Label fx:id="simulationSpeedLabel" text="Label" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#onDominantGenomeClick" text="Dominant genome" />
            <Button mnemonicParsing="false" onAction="#onDeselectClick" text="Deselect" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <Canvas fx:id="mapCanvas" height="400.0" onMouseClicked="#onCanvasClicked" width="640.0" />
      <HBox VBox.vgrow="ALWAYS">
         <children>
            <VBox>
               <children>
                  <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                     <children>
                        <Label text="Choose chart" />
                        <ChoiceBox fx:id="selectChartDropdown" prefWidth="150.0" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </HBox>
                  <StackPane prefWidth="314.0">
                     <children>
                        <LineChart fx:id="animalsChart" createSymbols="false" legendVisible="false" visible="false">
                          <xAxis>
                            <NumberAxis side="BOTTOM" />
                          </xAxis>
                          <yAxis>
                            <NumberAxis side="LEFT" />
                          </yAxis>
                        </LineChart>
                        <LineChart fx:id="plantsChart" createSymbols="false" legendVisible="false" visible="false">
                           <xAxis>
                              <NumberAxis side="BOTTOM" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis side="LEFT" />
                           </yAxis>
                        </LineChart>
                        <LineChart fx:id="averageFoodChart" createSymbols="false" legendVisible="false" visible="false">
                           <xAxis>
                              <NumberAxis side="BOTTOM" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis side="LEFT" />
                           </yAxis>
                        </LineChart>
                        <LineChart fx:id="averageLifetimeChart" createSymbols="false" legendVisible="false" visible="false">
                           <xAxis>
                              <NumberAxis side="BOTTOM" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis side="LEFT" />
                           </yAxis>
                        </LineChart>
                        <LineChart fx:id="averageChildrenChart" createSymbols="false" legendVisible="false" visible="false">
                           <xAxis>
                              <NumberAxis side="BOTTOM" />
                           </xAxis>
                           <yAxis>
                              <NumberAxis side="LEFT" />
                           </yAxis>
                        </LineChart>
                     </children>
                  </StackPane>
               </children>
            </VBox>
            <VBox HBox.hgrow="ALWAYS">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Label text="World age:" />
                        <Label fx:id="worldAgeLabel" text="?" />
                     </children>
                  </HBox>
                  <Label text="Dominant genome:" />
                  <Label fx:id="dominantGenomeLabel" text="?">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin></Label>
                  <Label text="Tracked animal:" />
                  <VBox>
                     <children>
                        <Label text="Genome:" />
                        <Label fx:id="trackedAnimalGenomeLabel" text="?">
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin>
                        </Label>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Energy:" />
                              <Label fx:id="trackedAnimalEnergyLabel" text="?" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Age:" />
                              <Label fx:id="trackedAnimalAgeLabel" text="?" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Children:" />
                              <Label fx:id="trackedAnimalChildrenLabel" text="?" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Death epoch:" />
                              <Label fx:id="trackedAnimalDeathLabel" text="?" />
                           </children>
                        </HBox>
                        <HBox spacing="10.0">
                           <children>
                              <Label text="Descendants:" />
                              <Label fx:id="trackedAnimalDescendantsLabel" text="?" />
                           </children>
                        </HBox>
                     </children>
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
